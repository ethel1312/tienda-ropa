<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.tienda_ropa.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_prenda_categoria"
            app:destination="@id/prenda_categoria" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.tienda_ropa.ui.deseos.ListaDeseosFragment"
        tools:layout="@layout/fragment_lista_deseos" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.tienda_ropa.ui.carrito.CarritoFragment"
        tools:layout="@layout/fragment_carrito" />

    <fragment
        android:id="@+id/prenda_categoria"
        android:name="com.example.tienda_ropa.ui.home.PrendaCategoria"
        tools:layout="@layout/fragment_prenda_por_categoria" />


</navigation>